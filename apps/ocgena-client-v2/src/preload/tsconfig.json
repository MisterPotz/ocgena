{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true
  },
  "include": ["./src/", "../shared", "src/preload.ts"],
}
