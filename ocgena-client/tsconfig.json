{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "importHelpers" : true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "declaration": false,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
